<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.message.messageapp.Main2Activity">

    <TextView
        android:id="@+id/chatRoomTitleOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"

        android:text="@string/chatRoomTitle"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/chatRoomTitleOne"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:id="@+id/cardViewFour" >

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cardView2"
            android:layout_marginRight="85dp"
            android:layout_marginTop="61dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/addMessageText" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/chatRoomTitleOne"
            android:layout_alignStart="@+id/chatRoomTitleOne"
            android:layout_below="@+id/chatRoomTitleOne"
            android:layout_marginLeft="88dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="71dp"
            android:text="Button" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
