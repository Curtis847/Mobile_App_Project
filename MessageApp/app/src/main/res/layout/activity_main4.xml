<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.message.messageapp.Main4Activity">

    <TextView
        android:id="@+id/chatRoomTitleThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/chatRoomTitle"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/addMessageThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="400dp"
        android:editable="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/addMessageText" />

    <Button
        android:id="@+id/sendMessageBtnThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/addMessageThree"
        android:layout_marginTop="80dp"
        android:layout_toLeftOf="@id/chatRoomTitleThree"
        android:layout_toStartOf="@id/chatRoomTitleThree"
        android:text="@string/sendMessageBtn"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/goToCameraBtnThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/addMessageThree"
        android:layout_below="@+id/addMessageThree"
        android:layout_marginTop="80dp"
        android:layout_toEndOf="@+id/chatRoomTitleThree"
        android:layout_toRightOf="@+id/chatRoomTitleThree"
        app:srcCompat="@drawable/camera_image" />

</RelativeLayout>
